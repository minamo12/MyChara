

<div class="space-30">
  <%= form_with model: @character, url: characters_path, method: :post do |f| %>
  <table>
    <tr>
      <th class="width-150">名前</th>
      <td><%= f.text_field :name, :required => true %></td>
    </tr>
    <tr>
      <th>メイン画像</th>
      <td><%= f.file_field :image, accept: "image/*" %></td>
    </tr>
    <tr>
      <th>説明文</th>
      <td><%= f.text_area :explanation %></td>
    </tr>
    <tr>
      <th>カテゴリ</th>
      <td>
        <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |category| %>
        <span class="margin-2 nowrap">
        <%= category.label do %>
          <%= category.check_box %>
          <span class="underline"><%= category.text %></span>
        <% end %>
        </span>
        <% end %>
      </td>
    </tr>
    <tr>
      <th>タグ</th>
      <td>
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
        <span class="margin-2 nowrap">
        <%= tag.label do %>
          <%= tag.check_box %>
          <span class="underline"><%= tag.text %></span>
        <% end %>
        </span>
        <% end %>
      </td>
    </tr>
    <tr>
      <th>画像</th>
      <td>
        <div class="space-10"><%= f.file_field :number_a_image, accept: "image/*" %></div>
        <div class="space-10"><%= f.file_field :number_b_image, accept: "image/*" %></div>
        <div class="space-10"><%= f.file_field :number_c_image, accept: "image/*" %></div>
      </td>
    </tr>
    <tr>
      <th></th>
      <td><%= f.submit '新規登録', class: "btn btn-success" %></td>
    </tr>
  </table>
  <% end %>

</div>


<div class="space-10">
  <div>カテゴリを追加する</div>
  <%= form_with model: @category, url: categories_path(chara: 1), method: :post do |f| %>
    <span>
      <%= f.text_field :name, :required => true %>
      <%= button_tag type: "submit" do %>
        <i class="fa-solid fa-plus"></i>
      <% end %>
    </span>
  <% end %>
</div>

<div class="space-10">
  <div>タグを追加する</div>
  <%= form_with model: @tag, url: tags_path(chara: 1), method: :post do |f| %>
    <span>
      <%= f.text_field :name, :required => true %>
      <%= button_tag type: "submit" do %>
        <i class="fa-solid fa-plus"></i>
      <% end %>
    </span>
  <% end %>
</div>



