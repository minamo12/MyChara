
<div>

  <div>会員一覧</div>
  <div>
    <% @customers.each do |customer| %>
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>ユーザ名</th>
            <th>ステータス</th>
            <th colspan="1"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= customer.id %></td>
            <td><%= customer.name %></td>
            <td>
              <% if customer.is_active %>
                <div>現在　有効</div>
                <div><%= link_to "退会にする", admin_customer_path(customer.id, customer:{is_active: false}), method: :patch %></div>
              <% else %>
                <div>現在　退会</div>
                <div><%= link_to "有効にする", admin_customer_path(customer.id, customer:{is_active: true}), method: :patch %></div>
              <% end %>
            </td>
            <td></td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>

  <div>お問い合わせ</div>

</div>